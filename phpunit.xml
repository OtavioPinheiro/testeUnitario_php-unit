<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
        colors="true" cacheResult="false"
        displayDetailsOnPhpunitDeprecations="true"
>
    
    <testsuites>
        <testsuite name="unit">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <!-- <log type="testdox-text" target="./realatorio.txt" /> -->
        <!-- <log type="testdox-html" target="./realatorio.html" /> -->
        <!-- <log type="coverage-html" target="./report" lowUpperBound="35" highLowerBound="70" /> -->
        <!-- <log type="coverage-text" target="php://stdout" showUncoveredFiles="true" /> -->
        <testdoxHtml outputFile="realatorio.html" />
        <testdoxText outputFile="realatorio.txt" />
    </logging>

</phpunit>